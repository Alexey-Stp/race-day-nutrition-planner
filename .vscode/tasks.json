{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start React Web",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/RaceDay.Web.React"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true
    },
    {
      "label": "Open React Browser",
      "type": "shell",
      "windows": {
        "command": "powershell",
        "args": [
          "-Command",
          "Start-Sleep -Seconds 3; Start-Process 'http://localhost:5173'"
        ]
      },
      "osx": {
        "command": "sh",
        "args": [
          "-c",
          "sleep 3 && open http://localhost:5173"
        ]
      },
      "linux": {
        "command": "sh",
        "args": [
          "-c",
          "sleep 3 && xdg-open http://localhost:5173"
        ]
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Start API",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "src/RaceDay.API/RaceDay.API.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true
    },
    {
      "label": "React + API + Open Browser",
      "dependsOn": [
        "Start API",
        "Start React Web",
        "Open React Browser"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
