{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start API (Swagger)",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "src/RaceDay.API/RaceDay.API.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Open Swagger UI",
      "type": "shell",
      "command": "start",
      "args": [
        "http://localhost:5208/swagger/ui"
      ],
      "windows": {
        "command": "start"
      },
      "osx": {
        "command": "open"
      },
      "linux": {
        "command": "xdg-open"
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Web UI",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "src/RaceDay.Web/RaceDay.Web.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true
    },
    {
      "label": "Open Web UI",
      "type": "shell",
      "command": "start",
      "args": [
        "http://localhost:5001"
      ],
      "windows": {
        "command": "start"
      },
      "osx": {
        "command": "open"
      },
      "linux": {
        "command": "xdg-open"
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Start API & Web (Parallel)",
      "dependsOn": [
        "Start API (Swagger)",
        "Start Web UI"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Start API & Web + Open Browsers",
      "dependsOn": [
        "Start API (Swagger)",
        "Start Web UI",
        "Open Swagger UI",
        "Open Web UI"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "test"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "clean"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
