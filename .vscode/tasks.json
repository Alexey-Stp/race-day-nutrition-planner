{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Web",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "src/RaceDay.Web/RaceDay.Web.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true
    },
    {
      "label": "Open Web Browser",
      "type": "shell",
      "windows": {
        "command": "powershell",
        "args": [
          "-Command",
          "Start-Sleep -Seconds 3; Start-Process 'http://localhost:5001'"
        ]
      },
      "osx": {
        "command": "sh",
        "args": [
          "-c",
          "sleep 3 && open http://localhost:5001"
        ]
      },
      "linux": {
        "command": "sh",
        "args": [
          "-c",
          "sleep 3 && xdg-open http://localhost:5001"
        ]
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Web + Open Browser",
      "dependsOn": [
        "Start Web",
        "Open Web Browser"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Start Swagger",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "src/RaceDay.API/RaceDay.API.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true
    },
    {
      "label": "Open Swagger Browser",
      "type": "shell",
      "windows": {
        "command": "powershell",
        "args": [
          "-Command",
          "Start-Sleep -Seconds 3; Start-Process 'http://localhost:5208/swagger/ui'"
        ]
      },
      "osx": {
        "command": "sh",
        "args": [
          "-c",
          "sleep 3 && open http://localhost:5208/swagger/ui"
        ]
      },
      "linux": {
        "command": "sh",
        "args": [
          "-c",
          "sleep 3 && xdg-open http://localhost:5208/swagger/ui"
        ]
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Swagger + Open Browser",
      "dependsOn": [
        "Start Swagger",
        "Open Swagger Browser"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Web + Swagger + Open Browsers",
      "dependsOn": [
        "Start Web",
        "Start Swagger",
        "Open Web Browser",
        "Open Swagger Browser"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
