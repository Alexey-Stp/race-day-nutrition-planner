@using RaceDay.Core
@inject HttpClient Http
@rendermode InteractiveServer

<div class="product-selector">
    <h3>Select Products for Your Race</h3>
    
    <div class="filter-section">
        <div class="filter-group">
            <label>Brand:</label>
            <select @bind="selectedBrand" @bind:after="FilterProducts">
                <option value="">All Brands</option>
                @if (availableBrands != null)
                {
                    @foreach (var brand in availableBrands)
                    {
                        <option value="@brand">@brand</option>
                    }
                }
            </select>
        </div>
        
        <div class="filter-group">
            <label>Product Types:</label>
            <div class="checkbox-group">
                <label class="checkbox-label">
                    <input type="checkbox" @bind="showGels" @bind:after="FilterProducts" />
                    <span>Gels</span>
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" @bind="showDrinks" @bind:after="FilterProducts" />
                    <span>Drinks</span>
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" @bind="showBars" @bind:after="FilterProducts" />
                    <span>Bars</span>
                </label>
            </div>
        </div>
        
        <div class="filter-group">
            <label>Search:</label>
            <input type="text" 
                   placeholder="Search products..." 
                   @bind="searchQuery" 
                   @bind:after="FilterProducts" />
        </div>
    </div>

    @if (products == null)
    {
        <p class="loading">Loading products...</p>
    }
    else if (products.Count == 0)
    {
        <p class="no-products">No products found</p>
    }
    else
    {
        <div class="products-grid">
            @foreach (var product in products)
            {
                <div class="product-card">
                    <div class="product-header">
                        <h4>@product.Name</h4>
                        <span class="brand-badge">@product.Brand</span>
                    </div>
                    <div class="product-type">@product.ProductType</div>
                    <div class="product-info">
                        <div class="info-row">
                            <span class="label">Calories:</span>
                            <span class="value">@product.CaloriesKcal kcal</span>
                        </div>
                        <div class="info-row">
                            <span class="label">Carbs:</span>
                            <span class="value">@product.CarbsG g</span>
                        </div>
                        <div class="info-row">
                            <span class="label">Sodium:</span>
                            <span class="value">@product.SodiumMg mg</span>
                        </div>
                        <div class="info-row">
                            <span class="label">Volume:</span>
                            <span class="value">@product.VolumeMl ml</span>
                        </div>
                    </div>
                    <button class="add-btn" @onclick="() => OnProductSelected(product)">
                        Add to Plan
                    </button>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<ProductInfo>? products;
    private List<ProductInfo>? allProducts;
    private List<string>? availableBrands;
    
    private string selectedBrand = "";
    private bool showGels = true;
    private bool showDrinks = true;
    private bool showBars = true;
    private string searchQuery = "";

    [Parameter]
    public EventCallback<ProductInfo> OnProductAdded { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        try
        {
            allProducts = await Http.GetFromJsonAsync<List<ProductInfo>>("/api/products") ?? new List<ProductInfo>();
            ExtractBrands();
            FilterProducts();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading products: {ex.Message}");
            allProducts = new List<ProductInfo>();
        }
    }

    private void ExtractBrands()
    {
        if (allProducts == null) return;
        
        availableBrands = allProducts
            .Select(p => p.Brand)
            .Distinct()
            .OrderBy(b => b)
            .ToList();
    }

    private void FilterProducts()
    {
        if (allProducts == null) return;

        var filtered = allProducts.AsEnumerable();

        // Filter by brand
        if (!string.IsNullOrEmpty(selectedBrand))
        {
            filtered = filtered.Where(p => p.Brand == selectedBrand);
        }

        // Filter by product types (checkboxes)
        var typeFilter = new List<string>();
        if (showGels) typeFilter.Add("gel");
        if (showDrinks) typeFilter.Add("drink");
        if (showBars) typeFilter.Add("bar");

        if (typeFilter.Count > 0)
        {
            filtered = filtered.Where(p => typeFilter.Contains(p.ProductType));
        }

        // Filter by search query
        if (!string.IsNullOrEmpty(searchQuery))
        {
            var query = searchQuery.ToLower();
            filtered = filtered.Where(p =>
                p.Name.ToLower().Contains(query) ||
                p.Brand.ToLower().Contains(query) ||
                p.ProductType.ToLower().Contains(query)
            );
        }

        products = filtered.ToList();
    }

    private async Task OnProductSelected(ProductInfo product)
    {
        await OnProductAdded.InvokeAsync(product);
    }
}
